@model TestCodeFirst.Models.Book

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>Delete Book</h1>
    <h3>Are you sure you want to delete this?</h3>
    <div class="card p-4 mt-3">
        <h4>Book Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-2">Author</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Author)</dd>

            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">$@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">
                <img src="@Html.DisplayFor(model => model.Image)" alt="Book Image" style="max-width: 100px;" />
            </dd>

            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Category.CategoryName)</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
