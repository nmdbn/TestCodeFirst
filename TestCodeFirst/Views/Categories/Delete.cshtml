@model TestCodeFirst.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4">Delete Category</h1>

    <h3 class="text-danger">Are you sure you want to delete this?</h3>
    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <h5 class="card-title">Category Details</h5>
            <dl class="row">
                <dt class="col-sm-3">Category Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="CategoryId" />
        <div class="d-flex justify-content-start">
            <input type="submit" value="Delete" class="btn btn-danger me-2" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
